<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.whileloop.smartglucosemanager.GlucoseEntryActivity" >

    <EditText
        android:id="@+id/dateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="date"
        android:text="2016-02-04"
        tools:ignore="RtlHardcoded" >

        <requestFocus></requestFocus>
        </EditText>

    <EditText
        android:id="@+id/timeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateText"
        android:ems="10"
        android:inputType="time"
        android:text="07:00" />

    <EditText
        android:id="@+id/bgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/timeText"
        android:layout_below="@+id/timeText"
        android:ems="10"
        android:text="BG (mg dl)" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/dateText"
        android:layout_below="@+id/textView1"
        android:background="#C7C7C7"
        android:paddingLeft="100dp"
        android:text="Glucose Entry" />

    <Button
        android:id="@+id/savebutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#000000"
        android:onClick="onSaveButtonClick"
        android:text="Save"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="500dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:background="#C7C7C7"
        android:paddingLeft="75dp"
        android:shadowColor="#000000"
    android:shadowDx="1.5"
    android:shadowDy="1.3"
    android:shadowRadius="1.6"
    android:textAllCaps="true"
        android:text="@string/smart_glucose_manager" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/bgText" >
        
        
        <RadioButton
            android:id="@+id/radioBeforeBrekfast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:background="#ececec"
            android:text="Before Breakfast" />

        <RadioButton
            android:id="@+id/radioAfterBreakfast"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:text="After Breakfast" />
        
        <RadioButton
            android:id="@+id/radioBeforeLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:text="Before Lunch" />
        
        <RadioButton
            android:id="@+id/radioAfterLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:text="After Lunch" />
        
        <RadioButton
            android:id="@+id/radioBeforeDinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:text="Before Dinner" />
        
        <RadioButton
            android:id="@+id/radioAfterDinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:text="After Dinner" />
           
    </RadioGroup>
</RelativeLayout>