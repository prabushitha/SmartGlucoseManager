<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true" 
    android:focusableInTouchMode="true"
    tools:context="com.whileloop.smartglucosemanager.ProfileActivity" >
    
    
    
    
    <TableLayout 
        	android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:stretchColumns="*">
        <TableRow 
	        android:background="#C7C7C7"
	        >
            <TextView
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="9"
			    	android:gravity="center"
			    	android:textSize="18sp"
		            android:text="Profile"
		            />
            <Button 
                 	android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="3"
			    	android:text="Back"
			    	android:onClick="onBackPress"
                />
        </TableRow>
    </TableLayout>
    
	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginTop="50dp"
	    >
	    <TableLayout
	    	android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentRight="true"
	        android:stretchColumns="*" >
	        <TableRow >
	            <TextView
		            android:id="@+id/textView3"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="DOB"
		            />
	            <EditText
		            android:id="@+id/dob_txt"
		            android:layout_weight="2"
		            android:onClick="onItemClick"
		            android:inputType="none"
			        android:focusable="false" >
		
		            <requestFocus />
		        </EditText>
	        </TableRow>
	        	
	        
	        
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView4"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Sex"/>
		
		        <RadioGroup
		            android:id="@+id/sexRadioGroup"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="2"
		            android:orientation="horizontal">
		
		            <RadioButton
		                android:id="@+id/maleRadio"
		                android:checked="true"
		                android:paddingLeft="6dip"
		                 />
		            <TextView 
		                android:text="Male"
		                android:textSize="12sp"
		                />
		
		            <RadioButton
		                android:id="@+id/femalRadio"
		                android:paddingLeft="6dip" />
		            <TextView 
		                android:text="Female"
		                android:textSize="12sp"
		                />
		
		 		</RadioGroup>
	        </TableRow>
	        
	        
	        
	        
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/heightText"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Height" />
	            
	            <EditText
		            android:id="@+id/heightTextField"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:ems="10"
		            android:inputType="numberDecimal" />
		
		        
				<TextView
		            android:id="@+id/weightText"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Weight" />
				
				<EditText
		            android:id="@+id/weightTextField"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:ems="10"
		            android:inputType="numberDecimal" />
				
		        
		
		        
	        </TableRow>
	        
	        
	        
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView7"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="BMI" />
				
		        <EditText
		            android:id="@+id/bmiInput"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:focusable="false"
		            android:ems="10"
		            android:inputType="number" />
	        </TableRow>
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView8"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Email" />
				
		        <EditText
		            android:id="@+id/emailInput"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:ems="10"
		            android:inputType="textEmailAddress" />
	        </TableRow>
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView9"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Home Phone" />
		
		        <EditText
		            android:id="@+id/phoneInput"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:ems="10"
		            android:inputType="phone" />
	        </TableRow>
	        
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView10"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Mobile Phone" />
		
		        <EditText
		            android:id="@+id/mobileInput"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:ems="10"
		            android:inputType="phone" />
	        </TableRow>
	        
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView11"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Diabetes Care Provider" />
		
		        <EditText
		            android:id="@+id/diab_care_txt"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:ems="10" />
	        </TableRow>
	        
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView12"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="DCP:" />
	        </TableRow>
	        
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView13"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="MO,DO,PA,NP" />
		
		        <EditText
		            android:id="@+id/mo_do_input"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:ems="10"
		            android:inputType="number" />
	        </TableRow>
	        
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView14"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Diabetes Educator" />
				
		        <EditText
		            android:id="@+id/diabEduTxt"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:ems="10" />
	        </TableRow>
	        
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView16"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="DCP Email" />
	            
	            <EditText
		            android:id="@+id/emailInputDCP"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:ems="10"
		            android:inputType="textEmailAddress" />
	        </TableRow>
	        
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView15"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Type of Diabetes :" />
	        </TableRow>
	        
	        
	        <TableRow >
	            <RadioGroup
		            android:id="@+id/typeRadioGroup"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:orientation="vertical">
		
		            <RadioButton
		                android:id="@+id/dType1"
		                android:layout_width="wrap_content"
				        android:layout_height="match_parent"
		                android:text="Type 1"
		                android:textSize="12sp" />
		
		            <RadioButton
		                android:id="@+id/dType2"
		                android:layout_width="wrap_content"
				        android:layout_height="match_parent"
		                android:text="Type 2"
		                android:textSize="12sp" />
		            
		            <RadioButton
		                android:id="@+id/dType3"
		                android:layout_width="wrap_content"
				        android:layout_height="match_parent"
		                android:text="Unknown"
		                android:textSize="12sp" />
		            
		            <RadioButton
		                android:id="@+id/dType4"
		                android:layout_width="wrap_content"
				        android:layout_height="match_parent"
		                android:checked="true"
		                android:text="None"
		                android:textSize="12sp" />
		
		 		</RadioGroup>
	        </TableRow>
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView17"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Duration :" />
		
		        <EditText
		            android:id="@+id/durationTxt"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:ems="10"
		            android:inputType="number" />
		
		        <TextView
		            android:id="@+id/textView18"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Years" />
	        </TableRow>
	        
	        <TableRow >
	            <TextView
		            android:id="@+id/textView19"
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
		            android:text="Diabetes Complications :" />
	        </TableRow>
	        
	        <TableRow >
	            <LinearLayout 
				    android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
	   				android:orientation="vertical">
				    <CheckBox
			            android:id="@+id/checkBox5"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="None" />
			        
			        <CheckBox
			            android:id="@+id/checkBox6"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="Unknown" />
			
			        <CheckBox
			            android:id="@+id/checkBox7"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="Neuropathy" />
			
			        <CheckBox
			            android:id="@+id/checkBox8"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="Gastroparesis" />
			
			        <CheckBox
			            android:id="@+id/checkBox9"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="CAD" />
			
			        <CheckBox
			            android:id="@+id/checkBox10"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="CVA" />
			
			        <CheckBox
			            android:id="@+id/checkBox11"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="PVD" />
			
			        <CheckBox
			            android:id="@+id/checkBox12"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="ED" />
			
			        <CheckBox
			            android:id="@+id/checkBox13"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="Obstructive sleep apnea" />
			
			        <CheckBox
			            android:id="@+id/checkBox14"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="Depression" />
			
			        <CheckBox
			            android:id="@+id/checkBox15"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="Deafness" />
			
			        <CheckBox
			            android:id="@+id/checkBox16"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="Dental Complications" />
			
			        <CheckBox
			            android:id="@+id/checkBox17"
			            android:layout_width="wrap_content"
				        android:layout_height="match_parent"
			            android:text="Cancer" />
				    
				</LinearLayout>
	        </TableRow>
	        
	        <TableRow >
	            <Button 
	               	android:id="@+id/btnSave"
			        android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			        android:onClick="onClickSave"
			        android:text="Save"/>
	        </TableRow>
	        
	        <!-- Medications -->
	        <!-- Oral Medications -->
	        <TableRow >
	            <TextView
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"/>
	        </TableRow>
	        
	        <TableRow >
	            <TextView
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:textStyle="bold"
			    	android:background="#C7C7C7"
		            android:text="Oral Medications : " />
	        </TableRow>
	        
	        <TableRow >
	            <LinearLayout 
	                android:id="@+id/oralLayout"
				    android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:layout_marginLeft="8dp"
	   				android:orientation="vertical">
			        
	            </LinearLayout>
	            
	        </TableRow>
	        
	        <!-- Insuline and Other Medications -->
	        <TableRow >
	            <TextView
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"/>
	        </TableRow>
	        
	        <TableRow >
	            <TextView
		            android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:textStyle="bold"
			    	android:background="#C7C7C7"
		            android:text="Insulin and Other Injections : " />
	        </TableRow>
	        
	        <TableRow >
	            <LinearLayout 
	                android:id="@+id/insulineLayout"
				    android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:layout_marginLeft="8dp"
	   				android:orientation="vertical">
			        
	            </LinearLayout>
	            
	        </TableRow>
	        
	    </TableLayout>

	</ScrollView>
</RelativeLayout>