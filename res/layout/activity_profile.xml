<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:fillViewport="true"
    android:scrollbarSize="15dip"
    android:scrollbarThumbHorizontal="@drawable/thumb01"
    android:scrollbarThumbVertical="@drawable/thumb01" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#C7C7C7"
            android:paddingLeft="75dp"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="1.6"
            android:text="@string/smart_glucose_manager"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:background="#C7C7C7"
            android:paddingLeft="130dp"
            android:text="Profile" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:inputType="date" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="DOB"
            android:width="50dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:paddingTop="5dp"
            android:text="Sex"
            android:width="50dp" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/textView4" >

            <RadioButton
                android:id="@+id/maleRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Male"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/femalRadio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:text="Female"
                android:textSize="12sp" />

 </RadioGroup>

        <TextView
            android:id="@+id/heightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView4"
            android:layout_alignRight="@+id/textView4"
            android:layout_below="@+id/radioGroup1"
            android:layout_marginTop="18dp"
            android:text="Height" />

        <EditText
            android:id="@+id/weightTextField"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/heightTextField"
            android:layout_toRightOf="@+id/weightText"
            android:ems="10"
             android:layout_marginLeft="10dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/heightTextField"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioGroup1"
            android:layout_below="@+id/radioGroup1"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/weightText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/heightTextField"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/heightTextField"
            android:text="Weight" />

        <EditText
            android:id="@+id/bmiInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/editText1"
            android:layout_below="@+id/heightText"
            android:layout_toRightOf="@+id/textView11"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/bmiInput"
            android:layout_below="@+id/bmiInput"
            android:layout_toRightOf="@+id/textView11"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/emailInput"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:paddingLeft="40dp"
            android:text="Email" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/emailInput"
            android:layout_alignLeft="@+id/heightText"
            android:paddingLeft="40dp"
            android:layout_alignRight="@+id/heightTextField"
            android:text="BMI" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="17dp"
             android:paddingLeft="20dp"
            android:text="HomePhone" />

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignRight="@+id/emailInput"
            android:layout_toRightOf="@+id/textView8"
            android:ems="10"
            android:inputType="phone" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView9"
            android:layout_below="@+id/textView9"
            android:paddingLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="MobilePhone" />

        <EditText
            android:id="@+id/mobileInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/phoneInput"
            android:layout_below="@+id/phoneInput"
            android:layout_toRightOf="@+id/textView11"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:id="@+id/mo_do_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignLeft="@+id/editText10"
            android:layout_alignRight="@+id/weightTextField"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignRight="@+id/textView9"
            android:layout_below="@+id/textView11"
            android:paddingLeft="30dp"
            android:text="DCP:" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView11"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="14dp"
            android:paddingLeft="20dp"
            android:text="MO,DO,PA,NP" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/emailInput"
            android:layout_below="@+id/mo_do_input"
            android:layout_toRightOf="@+id/textView11"
            android:ems="10" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editText10"
            android:layout_alignLeft="@+id/textView13"
            android:paddingLeft="2dp"
            android:text="Diabetes Educator" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobileInput"
            android:layout_marginTop="17dp"
            android:layout_toLeftOf="@+id/weightText"
            android:paddingLeft="0dp"
            android:text="Diabtes Care Provider" />

        <EditText
            android:id="@+id/numberInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobileInput"
            android:layout_alignLeft="@+id/mobileInput"
            android:layout_alignRight="@+id/mobileInput"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView14"
            android:layout_alignRight="@+id/textView14"
            android:layout_below="@+id/textView14"
             android:paddingLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="DCP Email" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView16"
            android:layout_below="@+id/textView16"
            android:layout_marginTop="23dp"
            android:text="Type of Diabetes :" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignRight="@+id/editText10"
            android:layout_below="@+id/textView15"
            android:layout_marginTop="18dp"
            android:text="Type 1" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView15"
            android:layout_alignRight="@+id/textView15"
            android:layout_below="@+id/checkBox1"
            android:text="Type 2" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox2"
            android:layout_below="@+id/checkBox2"
            android:text="Unknown" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox1"
            android:layout_below="@+id/checkBox4"
            android:layout_marginTop="17dp"
            android:text="Duration :" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView17"
            android:layout_toRightOf="@+id/textView12"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView17"
            android:layout_alignBottom="@+id/textView17"
            android:layout_alignRight="@+id/checkBox1"
            android:text="Years" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox4"
            android:layout_below="@+id/textView17"
            android:layout_marginTop="16dp"
            android:text="Diabetes Complications :" />

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView19"
            android:layout_below="@+id/textView19"
            android:text="None" />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox3"
            android:layout_alignRight="@+id/textView11"
            android:layout_below="@+id/checkBox3"
            android:text="None" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView17"
            android:layout_below="@+id/checkBox5"
            android:text="Unknown" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox6"
            android:layout_below="@+id/checkBox6"
            android:text="Neuropathy" />

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox5"
            android:layout_below="@+id/checkBox7"
            android:text="Gastroparesis" />

        <CheckBox
            android:id="@+id/checkBox9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox8"
            android:layout_below="@+id/checkBox8"
            android:text="CAD" />

        <CheckBox
            android:id="@+id/checkBox10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox9"
            android:layout_alignRight="@+id/checkBox2"
            android:layout_below="@+id/checkBox9"
            android:text="CVA" />

        <CheckBox
            android:id="@+id/checkBox11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox10"
            android:layout_below="@+id/checkBox10"
            android:text="PVD" />

        <CheckBox
            android:id="@+id/checkBox12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox11"
            android:layout_below="@+id/checkBox11"
            android:text="ED" />

        <CheckBox
            android:id="@+id/checkBox13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox7"
            android:layout_below="@+id/checkBox12"
            android:text="Obstructive sleep apnea" />

        <CheckBox
            android:id="@+id/checkBox14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox13"
            android:layout_below="@+id/checkBox13"
            android:text="Depression" />

        <CheckBox
            android:id="@+id/checkBox15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox14"
            android:layout_below="@+id/checkBox14"
            android:text="Deafness" />

        <CheckBox
            android:id="@+id/checkBox16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox12"
            android:layout_below="@+id/checkBox15"
            android:text="Dental Complications" />

        <CheckBox
            android:id="@+id/checkBox17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/checkBox15"
            android:layout_below="@+id/checkBox16"
            android:text="Cancer" />

        <EditText
            android:id="@+id/editText12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView16"
            android:layout_alignBottom="@+id/textView16"
            android:layout_alignRight="@+id/editText10"
            android:layout_toRightOf="@+id/checkBox8"
            android:ems="10"
            android:inputType="textEmailAddress" />

    </RelativeLayout>

</ScrollView>